{{#if bottle}}
<div class="bottle-display">
    <div class="bottle-img">
        <img src="/{{bottle.file}}">
    </div>
    <div class="bottle-detail">
        <h3>{{bottle.product.size}} {{bottle.product.type}}</h3>
        <p>${{bottle.product.price}}</p>
        <hr>
        <div>
            <div class="bottle-info">
                <p><b>COLOR:</b> {{bottle.color.name}}</p>
                <p><b>SIZE:</b> {{bottle.product.size}}</p>
                <p><b>STOCK:</b> {{bottle.inventory}}</p>
            </div>
            <div class="bottle-buy">
                <form action="" method="POST">
                    <div class="input-group">
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-default btn-number" data-type="minus"
                                data-field="quant[1]">
                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-dash" fill="currentColor"
                                    xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd"
                                        d="M3.5 8a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 0 1H4a.5.5 0 0 1-.5-.5z" />
                                </svg>
                            </button>
                        </span>
                        <input type="number" class="form-control input-number" name="number" data-type="number"
                            value="1" min="1">
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-default btn-number" data-type="plus">
                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-plus" fill="currentColor"
                                    xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd"
                                        d="M8 3.5a.5.5 0 0 1 .5.5v4a.5.5 0 0 1-.5.5H4a.5.5 0 0 1 0-1h3.5V4a.5.5 0 0 1 .5-.5z" />
                                    <path fill-rule="evenodd"
                                        d="M7.5 8a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1H8.5V12a.5.5 0 0 1-1 0V8z" />
                                </svg>
                            </button>
                        </span>
                    </div>
                    {{#if instock}}
                    <button type="submit" class="btn btn-success">BUY</button>
                    {{else}}
                    <button type="submit" class="btn btn-danger" disabled>BUY</button>
                    {{/if}}
                </form>
            </div>
        </div>
        {{#if instock}}
        <p class="text-success" style="font-weight: 600;">AVAILABLE</p>
        {{else}}
        <p class="text-danger" style="font-weight: 600;">OUT OF STOCK</p>
        {{/if}}

    </div>
</div>
{{else}}
<h6>This page seems to be dehydrated!</h6>
<p>Please drink some water and try again.</p>
{{/if}}